---
import { siteConfig } from "../config";
const c = siteConfig.colors;
---

<section
  id="practice"
  class="py-20 md:py-28"
  style={`background-color: ${c.bgAlt}`}
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 reveal">
      <h2
        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-[0.08em] uppercase"
        style={`color: ${c.textHeading}; font-family: 'Playfair Display', serif;`}
      >
        &Aacute;reas de Actuaci&oacute;n
      </h2>
      <div class="w-16 h-[2px] mx-auto mt-6" style={`background: ${c.accent}`}></div>
    </div>

    <!-- 3 Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 mb-14">
      {siteConfig.practiceAreas.map((area, index) => (
        <div
          class="practice-card reveal rounded-xl p-8 text-center"
          style={`background: ${c.card}; border: 1px solid ${c.cardBorder};`}
        >
          <!-- Circular Icon -->
          <div
            class="practice-icon w-18 h-18 md:w-20 md:h-20 rounded-full mx-auto mb-6 flex items-center justify-center"
            style={`background: ${c.bg}; border: 2px solid ${c.accent};`}
          >
            <svg class="w-8 h-8 md:w-9 md:h-9" fill="none" stroke={c.accent} viewBox="0 0 24 24" stroke-width="1.5">
              {index === 0 && (
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              )}
              {index === 1 && (
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              )}
              {index === 2 && (
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              )}
            </svg>
          </div>

          <!-- Title -->
          <h3
            class="text-lg font-bold mb-3"
            style={`color: ${c.textHeading}; font-family: 'Raleway', sans-serif;`}
          >
            {area.name}
          </h3>

          <!-- Description -->
          <p class="text-sm leading-relaxed" style={`color: ${c.textMuted}`}>
            {area.description}
          </p>
        </div>
      ))}
    </div>

    <!-- CTA Button -->
    <div class="text-center reveal">
      <a
        href={`https://wa.me/${siteConfig.social?.whatsapp?.replace(/\D/g, '')}?text=Hola, me interesa agendar una consulta legal`}
        target="_blank"
        rel="noopener noreferrer"
        class="cta-btn inline-flex items-center gap-3 px-10 py-4 rounded-full font-semibold text-sm tracking-wide shadow-lg"
        style={`background: ${c.accent}; color: ${c.bg};`}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Agendar Consulta
      </a>
    </div>
  </div>
</section>

<style>
  .practice-card {
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1),
                box-shadow 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .practice-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px rgba(30, 196, 168, 0.12);
  }
  .practice-icon {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .practice-card:hover .practice-icon {
    transform: scale(1.08);
    box-shadow: 0 0 25px rgba(30, 196, 168, 0.25);
  }
  .cta-btn {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .cta-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 35px rgba(30, 196, 168, 0.35);
  }
</style>
