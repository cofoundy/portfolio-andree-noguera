---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section
    id="projects"
    class="py-12 md:py-16"
    style={`background-color: ${siteConfig.colors.surface}`}
  >
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-10 reveal-left">
        <h2
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Proyectos Destacados
        </h2>
        <div
          class="w-16 h-1 mt-3 rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {siteConfig.projects.map((project, index) => (
          <div
            class={`reveal stagger-${index + 1} project-card card-hover p-6 rounded-xl`}
            style={`background-color: white; border: 1px solid ${siteConfig.colors.primaryDark}12`}
          >
            <h3
              class="text-lg font-semibold mb-3"
              style={`color: ${siteConfig.colors.primaryDark}; font-family: 'Raleway', sans-serif;`}
            >
              {project.name}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
              {project.description}
            </p>
            {project.skills && (
              <div class="flex flex-wrap gap-1.5">
                {project.skills.map((skill) => (
                  <span
                    class="text-xs px-2.5 py-1 rounded-full"
                    style={`background-color: ${siteConfig.colors.accent}15; color: ${siteConfig.colors.primaryDark}`}
                  >
                    {skill}
                  </span>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}
