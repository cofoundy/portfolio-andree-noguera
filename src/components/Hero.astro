---
import { siteConfig } from "../config";
const c = siteConfig.colors;
---

<section
  id="hero"
  class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden"
>
  <!-- Full background image -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style="background-image: url('/hero-bg.webp');"
  ></div>

  <!-- Dark overlay for text readability -->
  <div
    class="absolute inset-0"
    style={`background: linear-gradient(135deg, ${c.bg}ee 0%, ${c.bg}aa 40%, transparent 70%, ${c.bg}88 100%);`}
  ></div>

  <!-- Bottom fade -->
  <div
    class="absolute bottom-0 left-0 right-0 h-40"
    style={`background: linear-gradient(to top, ${c.bg}, transparent);`}
  ></div>

  <!-- Content -->
  <div class="relative z-10 text-center px-6 py-32 md:py-40 max-w-4xl mx-auto">
    <!-- Monogram -->
    <div class="hero-title mb-8">
      <div
        class="w-18 h-18 md:w-22 md:h-22 mx-auto rounded-full flex items-center justify-center backdrop-blur-sm"
        style={`border: 2px solid ${c.gold}60; background: ${c.bg}60;`}
      >
        <span
          class="text-2xl md:text-3xl font-bold tracking-[0.15em]"
          style={`color: ${c.gold}; font-family: 'Playfair Display', serif;`}
        >AN</span>
      </div>
    </div>

    <!-- Name -->
    <h1
      class="hero-subtitle text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-wide mb-5 drop-shadow-lg"
      style={`color: ${c.textHeading}; font-family: 'Playfair Display', serif;`}
    >
      {siteConfig.name}
    </h1>

    <!-- Subtitle -->
    <p
      class="hero-description text-sm md:text-base tracking-[0.3em] uppercase font-semibold mb-2"
      style={`color: ${c.accent}; font-family: 'Raleway', sans-serif;`}
    >
      Especialista en Derecho Penal
    </p>
    <p
      class="hero-description text-xs md:text-sm tracking-[0.2em] uppercase"
      style={`color: ${c.textMuted}; font-family: 'Raleway', sans-serif;`}
    >
      Maestrista PUCP &bull; Fexlaw Ecuador + Per&uacute;
    </p>

    <!-- Tagline -->
    <p
      class="hero-cta mt-8 text-base md:text-lg leading-relaxed max-w-xl mx-auto"
      style={`color: ${c.text}; font-family: 'Montserrat', sans-serif;`}
    >
      {siteConfig.tagline}
    </p>
  </div>

  <!-- Scroll indicator -->
  <div class="hero-social absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 z-10">
    <span class="text-[10px] tracking-[0.3em] uppercase" style={`color: ${c.textMuted}`}>Scroll</span>
    <div class="w-px h-10 scroll-line" style={`background: linear-gradient(to bottom, ${c.accent}, transparent);`}></div>
  </div>
</section>

<style>
  .scroll-line {
    animation: scrollPulse 2s ease-in-out infinite;
  }
  @keyframes scrollPulse {
    0%, 100% { opacity: 0.4; transform: scaleY(0.7); }
    50% { opacity: 1; transform: scaleY(1); }
  }
</style>
