---
import { siteConfig } from "../config";
const c = siteConfig.colors;
---

<section
  id="faq"
  class="py-20 md:py-28"
  style={`background-color: ${c.bg}`}
>
  <div class="max-w-5xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-14 reveal">
      <h2
        class="text-2xl sm:text-3xl md:text-4xl font-bold tracking-wide"
        style={`color: ${c.textHeading}; font-family: 'Playfair Display', serif;`}
      >
        Preguntas Frecuentes:
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-10 lg:gap-14">
      <!-- FAQ Accordion (left) -->
      <div class="lg:col-span-3">
        {siteConfig.faq.map((item, index) => (
          <div
            class="faq-item reveal border-b"
            style={`border-color: ${c.cardBorder};`}
          >
            <button
              class="faq-toggle w-full flex items-center justify-between py-5 text-left"
              data-faq={index}
            >
              <span
                class="text-sm md:text-base font-medium pr-4"
                style={`color: ${c.text}; font-family: 'Montserrat', sans-serif;`}
              >
                {item.question}
              </span>
              <span
                class="faq-icon shrink-0 w-7 h-7 flex items-center justify-center rounded text-lg"
                style={`color: ${c.accent}; border: 1px solid ${c.cardBorder};`}
              >
                +
              </span>
            </button>
            <div
              class="faq-content overflow-hidden"
              style="max-height: 0; transition: max-height 0.35s ease;"
            >
              <p
                class="pb-5 text-sm leading-[1.8]"
                style={`color: ${c.textMuted}; font-family: 'Montserrat', sans-serif;`}
              >
                {item.answer}
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- CTA Sidebar (right) -->
      <div class="lg:col-span-2 reveal-right">
        <div
          class="rounded-xl overflow-hidden text-center lg:text-left sticky top-24"
          style={`background: ${c.card}; border: 1px solid ${c.cardBorder};`}
        >
          <!-- Photo -->
          <picture>
            <source srcset="/cta-photo.webp" type="image/webp" />
            <img
              src="/cta-photo.jpg"
              alt={siteConfig.name}
              class="w-full h-48 object-cover object-top"
              loading="lazy"
            />
          </picture>

          <div class="p-6">
          <p
            class="text-sm mb-6 leading-relaxed"
            style={`color: ${c.text};`}
          >
            &iquest;Tienes alguna duda? Entra en contacto con nuestro atendimiento VIP.
          </p>

          <!-- WhatsApp -->
          <a
            href={`https://wa.me/${siteConfig.social?.whatsapp?.replace(/\D/g, '')}?text=Hola, tengo una consulta legal`}
            target="_blank"
            rel="noopener noreferrer"
            class="cta-wa flex items-center justify-center gap-2 w-full px-5 py-3 rounded-lg font-semibold text-sm mb-3"
            style="background-color: #25d366; color: white;"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            Atendimiento por WhatsApp
          </a>

          <!-- Email -->
          <a
            href={`mailto:${siteConfig.social?.email}?subject=${siteConfig.cta?.emailSubject || 'Consulta'}`}
            class="cta-email flex items-center justify-center gap-2 w-full px-5 py-3 rounded-lg font-semibold text-sm"
            style={`background: transparent; color: ${c.text}; border: 1px solid ${c.cardBorder};`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Atendimiento por E-mail
          </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.faq-toggle').forEach(btn => {
    btn.addEventListener('click', () => {
      const content = btn.nextElementSibling as HTMLElement;
      const icon = btn.querySelector('.faq-icon') as HTMLElement;
      const isOpen = content.style.maxHeight !== '0px' && content.style.maxHeight !== '';

      // Close all others
      document.querySelectorAll('.faq-content').forEach(c => {
        (c as HTMLElement).style.maxHeight = '0px';
      });
      document.querySelectorAll('.faq-icon').forEach(i => {
        (i as HTMLElement).textContent = '+';
      });

      if (!isOpen) {
        content.style.maxHeight = content.scrollHeight + 'px';
        icon.textContent = '\u2212';
      }
    });
  });
</script>

<style>
  .cta-wa { transition: all 0.3s ease; }
  .cta-wa:hover { transform: scale(1.02); box-shadow: 0 6px 20px rgba(37, 211, 102, 0.3); }
  .cta-email { transition: all 0.3s ease; }
  .cta-email:hover { transform: scale(1.02); }
  .faq-toggle { cursor: pointer; }
  .faq-icon { transition: transform 0.3s ease; }
</style>
