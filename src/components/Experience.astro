---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{hasExperience && (
  <section
    id="experience"
    class="py-12 md:py-16"
    style={`background-color: ${siteConfig.colors.surfaceLight}`}
  >
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-10 reveal-left">
        <h2
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Mi Trayectoria
        </h2>
        <div
          class="w-16 h-1 mt-3 rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Vertical Timeline -->
      <div class="relative pl-8 md:pl-12">
        <!-- Timeline Line -->
        <div
          class="absolute left-3 md:left-5 top-0 bottom-0 w-0.5"
          style={`background-color: ${siteConfig.colors.accent}40`}
        ></div>

        <div class="space-y-8">
          {siteConfig.experience.map((exp, index) => (
            <div class={`reveal stagger-${Math.min(index + 1, 6)} relative`}>
              <!-- Timeline Dot -->
              <div
                class="timeline-dot absolute -left-5 md:-left-7 top-1 w-4 h-4 md:w-5 md:h-5 rounded-full flex items-center justify-center"
                style={`background-color: ${siteConfig.colors.accent}; border: 3px solid ${siteConfig.colors.surfaceLight}`}
              >
              </div>

              <!-- Card -->
              <div
                class="card-hover p-5 md:p-6 rounded-xl ml-2"
                style={`background-color: white; border: 1px solid ${siteConfig.colors.primaryDark}12`}
              >
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-3 gap-2">
                  <div>
                    <h3
                      class="text-lg font-semibold"
                      style={`color: ${siteConfig.colors.primaryDark}`}
                    >
                      {exp.title}
                    </h3>
                    <p
                      class="text-base font-medium"
                      style={`color: ${siteConfig.colors.accent}`}
                    >
                      {exp.company}
                    </p>
                  </div>
                  <span
                    class="text-xs px-3 py-1 rounded-full flex-shrink-0 self-start"
                    style={`background-color: ${siteConfig.colors.surface}; color: ${siteConfig.colors.primaryDark}`}
                  >
                    {exp.dateRange}
                  </span>
                </div>
                <ul class="space-y-1.5">
                  {exp.bullets.slice(0, 3).map((bullet) => (
                    <li class="flex items-start text-sm text-gray-600">
                      <span
                        class="inline-block w-1.5 h-1.5 rounded-full mt-1.5 mr-2 flex-shrink-0"
                        style={`background-color: ${siteConfig.colors.accent}`}
                      />
                      {bullet}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
)}
