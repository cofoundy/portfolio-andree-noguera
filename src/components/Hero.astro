---
import { siteConfig } from "../config";
---

<!-- Gold Shimmer Bar -->
<div class="w-full h-3 bar-shimmer"></div>

<section
  id="hero"
  class="relative py-16 md:py-20 lg:py-24"
  style={`background-color: ${siteConfig.colors.primaryDark}`}
>
  <!-- Subtle pattern overlay -->
  <div
    class="absolute inset-0 opacity-5"
    style="background-image: radial-gradient(circle at 1px 1px, rgba(201,169,110,0.3) 1px, transparent 0); background-size: 40px 40px;"
  ></div>

  <div class="relative max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Main Hero Content -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 lg:gap-12 items-center">
      <!-- Photo Column -->
      <div class="md:col-span-4 flex justify-center md:justify-start order-2 md:order-1">
        <div class="relative hero-photo">
          <!-- Decorative glow -->
          <div
            class="absolute -inset-4 rounded-2xl"
            style={`background: linear-gradient(135deg, ${siteConfig.colors.accent}20 0%, ${siteConfig.colors.primaryLight}30 100%)`}
          ></div>
          <img
            src={`${import.meta.env.BASE_URL}/profile.jpg`}
            alt={siteConfig.name}
            class="relative w-56 h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 object-cover object-top rounded-2xl shadow-2xl"
            style={`border: 3px solid ${siteConfig.colors.accent}`}
            loading="eager"
          />
          <!-- Fexlaw Badge -->
          <div
            class="absolute -bottom-3 -right-3 px-4 py-2 rounded-lg shadow-lg"
            style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark}`}
          >
            <span class="text-xs font-bold tracking-wider">FEXLAW</span>
          </div>
        </div>
      </div>

      <!-- Text Content Column -->
      <div class="md:col-span-8 order-1 md:order-2 text-center md:text-left">
        <!-- Name -->
        <h1
          class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-white"
          style="font-family: 'Raleway', sans-serif;"
        >
          {siteConfig.name}
        </h1>

        <!-- Gold Separator -->
        <div
          class="w-24 h-1.5 my-4 mx-auto md:mx-0 rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>

        <!-- Title + PUCP Badge -->
        <div class="hero-subtitle flex flex-wrap items-center justify-center md:justify-start gap-3 mb-4">
          <span
            class="text-xl md:text-2xl font-medium"
            style={`color: ${siteConfig.colors.accent}; font-family: 'Raleway', sans-serif;`}
          >
            Abogado Penalista | Litigante
          </span>
          <span
            class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium"
            style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark}`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
            </svg>
            Maestrista PUCP
          </span>
        </div>

        <!-- Tagline -->
        <p
          class="hero-description text-lg md:text-xl leading-relaxed mb-8 max-w-xl mx-auto md:mx-0"
          style={`color: ${siteConfig.colors.surface}; font-family: 'Montserrat', sans-serif;`}
        >
          <strong style={`color: white`}>{siteConfig.tagline}</strong>
        </p>

        <!-- CTAs -->
        <div class="hero-cta flex flex-col sm:flex-row gap-4 justify-center md:justify-start mb-8">
          <a
            href={`mailto:${siteConfig.social?.email}?subject=Consulta Penal`}
            class="btn-hover inline-flex items-center justify-center gap-2 px-8 py-4 rounded-full font-semibold text-lg shadow-lg"
            style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Escr√≠beme
          </a>
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-hover inline-flex items-center justify-center gap-2 px-8 py-4 rounded-full font-semibold text-lg border-2"
              style={`border-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.accent}`}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              Ver LinkedIn
            </a>
          )}
        </div>

        <!-- Social Icons -->
        <div class="hero-social flex gap-3 justify-center md:justify-start">
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="icon-hover w-11 h-11 rounded-full flex items-center justify-center transition-all"
              style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark}`}
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="icon-hover w-11 h-11 rounded-full flex items-center justify-center transition-all"
              style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark}`}
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Trust Bar -->
    <div
      class="hero-stats mt-16 py-6 px-8 rounded-2xl grid grid-cols-3 gap-4 md:gap-8"
      style={`background-color: ${siteConfig.colors.primary}; border: 1px solid ${siteConfig.colors.accent}30`}
    >
      {siteConfig.stats.map((stat, index) => (
        <div
          class={`text-center stat-number ${index === 1 ? 'border-x' : ''}`}
          style={index === 1 ? `border-color: ${siteConfig.colors.accent}30` : ''}
        >
          <div
            class="text-2xl md:text-3xl font-bold"
            style={`color: ${siteConfig.colors.accent}`}
          >{stat.value}</div>
          <div
            class="text-xs md:text-sm font-medium"
            style="color: #cbd5e1"
          >{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
