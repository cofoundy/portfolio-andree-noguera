---
import { siteConfig } from "../config";
const hasPracticeAreas = siteConfig.practiceAreas && siteConfig.practiceAreas.length > 0;
---

{
  hasPracticeAreas && (
    <section id="practice" class="p-8 sm:p-12 md:p-16 lg:p-24 reveal">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Áreas de Práctica
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {siteConfig.practiceAreas.map((area) => (
                <div class="bg-white rounded-lg border border-gray-100 p-5 hover:shadow-md transition-all duration-300 hover:border-gray-200">
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">
                    {area.name}
                  </h3>
                  <p class="text-sm text-gray-600 leading-relaxed">
                    {area.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
