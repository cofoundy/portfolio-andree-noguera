---
import { siteConfig } from "../config";
---

<section
  id="about"
  class="py-12 md:py-16"
  style={`background-color: ${siteConfig.colors.surface}`}
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
      <!-- Title Column -->
      <div class="lg:col-span-3 reveal-left">
        <h2
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Sobre Mí
        </h2>
        <div
          class="w-16 h-1 mt-3 rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Content Column -->
      <div class="lg:col-span-5 reveal stagger-1">
        <p class="text-base md:text-lg text-gray-700 leading-relaxed">
          {siteConfig.aboutMe}
        </p>
      </div>

      <!-- Quote Column -->
      {siteConfig.quote && (
        <div class="lg:col-span-4 reveal-scale stagger-2">
          <blockquote
            class="quote-float relative p-6 rounded-xl"
            style={`background-color: ${siteConfig.colors.accent}15; border-left: 4px solid ${siteConfig.colors.accent}`}
          >
            <p
              class="text-lg md:text-xl font-medium italic"
              style={`color: ${siteConfig.colors.primaryDark}; font-family: 'Playfair Display', serif;`}
            >
              "{siteConfig.quote.text}"
            </p>
            <footer class="mt-3 text-sm" style={`color: ${siteConfig.colors.primary}`}>
              — {siteConfig.quote.author}
            </footer>
          </blockquote>
        </div>
      )}
    </div>

    <!-- Skills -->
    <div
      class="mt-10 pt-8 border-t reveal stagger-3"
      style={`border-color: ${siteConfig.colors.primaryDark}15`}
    >
      <h3
        class="text-sm font-semibold uppercase tracking-wider mb-4"
        style={`color: ${siteConfig.colors.primaryDark}`}
      >
        Especialidades
      </h3>
      <div class="flex flex-wrap gap-2">
        {siteConfig.skills.map((skill, index) => (
          <span
            class={`skill-hover px-4 py-2 rounded-full text-sm font-medium cursor-default stagger-${Math.min(index % 6 + 1, 6)}`}
            style={`background-color: white; color: ${siteConfig.colors.primaryDark}; border: 1px solid ${siteConfig.colors.primaryDark}30`}
          >
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
