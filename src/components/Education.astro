---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section
    id="education"
    class="py-12 md:py-16"
    style={`background-color: ${siteConfig.colors.surface}`}
  >
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-10 reveal-left">
        <h2
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Formación Académica
        </h2>
        <div
          class="w-16 h-1 mt-3 rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Education Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {siteConfig.education.map((edu, index) => (
          <div
            class={`reveal stagger-${index + 1} card-hover p-6 rounded-xl`}
            style={`background-color: white; border: 1px solid ${siteConfig.colors.primaryDark}12`}
          >
            <div class="flex items-start justify-between mb-2">
              <div>
                <h3
                  class="text-lg font-semibold"
                  style={`color: ${siteConfig.colors.primaryDark}`}
                >
                  {edu.degree}
                </h3>
                <p
                  class="text-base font-medium"
                  style={`color: ${siteConfig.colors.accent}`}
                >
                  {edu.school}
                </p>
              </div>
              {edu.dateRange && (
                <span
                  class="text-xs px-3 py-1 rounded-full flex-shrink-0"
                  style={`background-color: ${siteConfig.colors.surface}; color: ${siteConfig.colors.primaryDark}`}
                >
                  {edu.dateRange}
                </span>
              )}
            </div>
            {edu.achievements && edu.achievements.length > 0 && (
              <ul class="mt-3 space-y-1">
                {edu.achievements.map((achievement) => (
                  <li class="flex items-start text-sm text-gray-600">
                    <span
                      class="inline-block w-1.5 h-1.5 rounded-full mt-1.5 mr-2 flex-shrink-0"
                      style={`background-color: ${siteConfig.colors.accent}`}
                    />
                    {achievement}
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}
