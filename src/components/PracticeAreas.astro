---
import { siteConfig } from "../config";
const hasPracticeAreas = siteConfig.practiceAreas && siteConfig.practiceAreas.length > 0;
---

{hasPracticeAreas && (
  <section
    id="practice"
    class="py-20 md:py-28"
    style={`background: linear-gradient(180deg, ${siteConfig.colors.primaryDark} 0%, ${siteConfig.colors.primary} 100%);`}
  >
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-16 fade-in-up">
        <h2
          class="text-3xl md:text-5xl font-bold mb-3 tracking-tight"
          style="color: #f8f6f3; font-family: 'Playfair Display', serif; text-transform: uppercase; letter-spacing: 0.05em;"
        >
          Áreas de Actuación
        </h2>
        <div
          class="w-24 h-1 mx-auto rounded-full mt-6"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-12">
        {siteConfig.practiceAreas.map((area, index) => (
          <div
            class="isabella-card reveal"
            style={`
              background: ${siteConfig.colors.surface}cc;
              border: 1.5px solid ${siteConfig.colors.accent}33;
              border-radius: 24px;
              padding: 2.5rem 2rem;
              backdrop-filter: blur(10px);
              transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
              animation-delay: ${index * 0.1}s;
            `}
          >
            <!-- Icon Circle -->
            <div
              class="icon-circle mb-6"
              style={`
                width: 70px;
                height: 70px;
                border-radius: 50%;
                background: ${siteConfig.colors.primaryDark};
                border: 2px solid ${siteConfig.colors.accent};
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto;
              `}
            >
              <svg class="w-8 h-8" fill="none" stroke={siteConfig.colors.accent} viewBox="0 0 24 24" stroke-width="2">
                {index === 0 && <path stroke-linecap="round" stroke-linejoin="round" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />}
                {index === 1 && <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />}
                {index === 2 && <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />}
                {index === 3 && <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />}
                {index === 4 && <path stroke-linecap="round" stroke-linejoin="round" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />}
                {index === 5 && <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />}
              </svg>
            </div>

            <!-- Title -->
            <h3
              class="text-xl font-bold text-center mb-4"
              style="color: #f8f6f3; font-family: 'Raleway', sans-serif;"
            >
              {area.name}
            </h3>

            <!-- Description -->
            <p
              class="text-center text-sm leading-relaxed"
              style="color: #cbd5e1;"
            >
              {area.description}
            </p>
          </div>
        ))}
      </div>

      <!-- CTA Button WhatsApp -->
      <div class="text-center mt-16 fade-in-up">
        <a
          href={`https://wa.me/${siteConfig.social?.whatsapp?.replace(/\D/g, '')}?text=Hola, me interesa agendar una consulta legal`}
          target="_blank"
          rel="noopener noreferrer"
          class="isabella-cta inline-flex items-center gap-3 px-10 py-5 rounded-full font-bold text-lg shadow-2xl"
          style={`
            background: linear-gradient(135deg, ${siteConfig.colors.accent} 0%, ${siteConfig.colors.accentDark} 100%);
            color: ${siteConfig.colors.primaryDark};
            transition: all 0.3s ease;
          `}
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          Agendar Consulta
        </a>
      </div>
    </div>
  </section>
)}

<style>
  .isabella-card {
    position: relative;
    overflow: hidden;
  }

  .isabella-card::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, transparent, var(--accent) 50%, transparent);
    opacity: 0;
    transition: opacity 0.4s ease;
    border-radius: 24px;
    z-index: -1;
  }

  .isabella-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(244, 208, 63, 0.2);
  }

  .isabella-card:hover::before {
    opacity: 0.3;
  }

  .icon-circle {
    transition: all 0.3s ease;
  }

  .isabella-card:hover .icon-circle {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 10px 30px rgba(244, 208, 63, 0.4);
  }

  .isabella-cta:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(244, 208, 63, 0.4);
  }

  .fade-in-up {
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .reveal {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }
</style>
